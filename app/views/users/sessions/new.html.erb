<div id="content">
    <div class="container background-white">
        <div class="container">
            <div class="row margin-vert-30">
                <!-- Login Box -->
                <div class="col-md-6 col-md-offset-3 col-sm-offset-3">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-page'}) do |f| %>
<div class="login-header margin-bottom-30">
    <h2>Login to your account</h2>
</div>

<div class="input-group margin-bottom-20">
    <span class="input-group-addon">
        <i class="fa fa-user"></i>
    </span>

    <%= f.email_field :email, placeholder:'Email', autofocus: true, class: 'form-control' %>
  </div>

  <div class="input-group margin-bottom-20">
      <span class="input-group-addon">
          <i class="fa fa-lock"></i>
      </span>

    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="row">
      <div class="col-md-6">
          <label class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="col-md-6">
    <%= f.submit "Log in", class: 'btn btn-primary pull-right' %>
  </div>
<% end %>

<hr>

<%= render "users/shared/links" %>
</div>
<!-- End Login Box -->
</div>
</div>
</div>
</div>
