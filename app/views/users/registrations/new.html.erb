<div id="content">
    <div class="container background-white">
        <div class="row margin-vert-30">
            <!-- Register Box -->
            <div class="col-md-6 col-md-offset-3 col-sm-offset-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'signup-page') do |f| %>
  <%= devise_error_messages! %>

  <div class="signup-header">
      <h2>Register a new account</h2>
      <p>Already a member? Click
          <%= link_to "HERE",new_user_session_path %> to login to your account.</p>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control margin-bottom-20' %>
  </div>

  <div class="row">
      <div class="col-sm-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control margin-bottom-20' %>
  </div>

  <div class="col-md-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control margin-bottom-20' %>
  </div>
</div>
  <div class= "row">
  <div class="col-lg-12 text-right">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
</div>
<% end %>

<!-- <%= render "users/shared/links" %> -->

</div>
<!-- End Register Box -->
</div>
</div>
</div>
