<li class="list-group-item">
    <div class="row">

    	<div class="links btn-group">
    		<% if user_signed_in? %>
    			<% if review.user_id == current_user.id %>

    				<%= link_to "Edit", edit_school_review_path(review.school, review), class: "btn btn-custom" %>

    				<%= link_to "Delete", school_review_path(review.school, review), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-custom" %>

    			<% end %>
    		<% end %>
    	</div>
      <div class="col-md-12">
        <div class="review-rating" data-score="<%= review.rating   %>">

        </div>
          <p><%= review.comment %></p>
          <span class="date">
              <i class="fa fa-clock-o color-gray-light"></i>
              <% if review.created_at > Time.now.beginning_of_day %>
                <%="#{time_ago_in_words(review.created_at)} ago"%> # 3 minutes ago, less than a minute ago
              <% else %>
                <%= review.created_at.strftime("%b %d, %Y") %> # Jun 29, 2012
              <% end %>
            </span>
      </div>
  </div>
</li>
